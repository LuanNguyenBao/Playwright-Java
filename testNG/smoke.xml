<?xml version = "1.0" encoding = "UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="EPAM site" parallel="classes" thread-count="2">
    <test name="Smoke Testing" verbose="2" preserve-order="true" >
        <groups>
            <run>
                <include name = "smoke"></include>
            </run>
        </groups>
        <packages>
            <package name="com.epam.tests.*" />
        </packages>
    </test>

</suite>